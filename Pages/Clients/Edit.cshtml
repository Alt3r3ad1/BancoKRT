@page "{id}"
@model BancoKRT.Pages.Clients.EditModel

@{
    ViewData["Title"] = "Edit Clients";
}

<h1>Edit Clients</h1>

<h4>Clients</h4>
<hr />
<div class="row">
    @if (Model.exceptionViewModel != null)
    {
        if (Model.exceptionViewModel.message != null)
        {
            <div class="alert alert-info">@Model.exceptionViewModel.message</div>
        }
    }
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="clientViewModel.CPF" class="control-label"></label>
                <input asp-for="clientViewModel.CPF" class="form-control" readonly />
                <span asp-validation-for="clientViewModel.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clientViewModel.Agency" class="control-label"></label>
                <input asp-for="clientViewModel.Agency" class="form-control" disabled="disabled" />
                <span asp-validation-for="clientViewModel.Agency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clientViewModel.Account" class="control-label"></label>
                <input asp-for="clientViewModel.Account" class="form-control" disabled="disabled" />
                <span asp-validation-for="clientViewModel.Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clientViewModel.LimitPIX" class="control-label"></label>
                <input asp-for="clientViewModel.LimitPIX" class="form-control" oninput="validatePositiveNumber(this); formatValue(this)" onpaste="validatePositiveNumberPaste(this); formatValuePaste(this)" />
                <span asp-validation-for="clientViewModel.LimitPIX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
