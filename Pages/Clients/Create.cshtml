@page
@model BancoKRT.Pages.Clients.CreateModel

@{
    ViewData["Title"] = "Create Client";
}

<h1>Create Client</h1>

<h4>Client</h4>
<hr />
<div class="row">
    @if (Model.exceptionViewModel != null)
    {
        if (Model.exceptionViewModel.message != null)
        {
            <div class="alert alert-info">@Model.exceptionViewModel.message</div>
        }
    }
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="clientViewModel.CPF" class="control-label"></label>
                <input asp-for="clientViewModel.CPF" id="CPF" maxlength="14" class="form-control" oninput="formatCPF(this)" />
                <span asp-validation-for="clientViewModel.CPF" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clientViewModel.Agency" class="control-label"></label>
                <input asp-for="clientViewModel.Agency" class="form-control" oninput="validatePositiveNumber(this)" onpaste="validatePositiveNumberPaste(this)" />
                <span asp-validation-for="clientViewModel.Agency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clientViewModel.Account" class="control-label"></label>
                <input asp-for="clientViewModel.Account" class="form-control" oninput="validatePositiveNumber(this)" onpaste="validatePositiveNumberPaste(this)" />
                <span asp-validation-for="clientViewModel.Account" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="clientViewModel.LimitPIX" class="control-label"></label>
                <input asp-for="clientViewModel.LimitPIX" class="form-control" oninput="validatePositiveNumber(this)" onpaste="validatePositiveNumberPaste(this)" onblur="formatDecimalInput(this)" />
                <span asp-validation-for="clientViewModel.LimitPIX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>
