@page "{id}"
@model BancoKRT.Pages.PIXs.DetailsModel

@{
    ViewData["Title"] = "PIX Details";
}

<h1>PIX Details</h1>

<div>
    <h4>PIX</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.pixViewModel.Id
        </dd>
        <dt class="col-sm-2">
            Client
        </dt>
        <dd class="col-sm-10">
            @Model.pixViewModel.ClientCPF
        </dd>
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.pixViewModel.Date
        </dd>
        <dt class="col-sm-2">
            Value
        </dt>
        <dd class="col-sm-10">
            R$ @Model.pixViewModel.Value
        </dd>
    </dl>
</div>

